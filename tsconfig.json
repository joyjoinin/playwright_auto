{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "strict": true,
      "alwaysStrict": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "typeRoots": ["./typings", "node_modules/@types"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "outDir": "../tests-out",
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }